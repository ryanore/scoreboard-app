<h2>Edit Your Details</h2>
<form>
<div class="form-group content-section">
  <div class="row">
    <div class="col-sm-6 control-group" >
        <label class="control-label">First Name</label>
        <input type="text" class="form-control" name="firstName" placeholder="optional" value="{{firstName}}" />
    </div>
    <div class="col-sm-6 control-group" >
        <label class="control-label">Last Name</label>
        <input type="text" class="form-control" name="lastName" placeholder="optional"  value="{{lastName}}" />
    </div>
    <div class="col-md-4 control-group" >
        <label class="control-label">Username</label>
        <input type="text" class="form-control" name="username"  />
    </div>
    <div class="col-md-8 control-group" >
        <label class="control-label">Email</label>
        <input type="email" class="form-control" name="email"  />
    </div>            
		</div>

 	<div class="row">
		{{#if errors}}
			<div class=" col-sm-12 control-group">
				<div class="alert alert-warning">
					<ul>
						{{#each errors}}
							<li>{{this}}</li>
						{{/each}}
					</ul>
				</div>
			</div>
		{{/if}}
		<div class="col-sm-3 control-group  pull-right" >
			<button class="btn btn-primary btn-block" type="submit">Create</button>
		</div>            
 	</div>

</div>
</form>